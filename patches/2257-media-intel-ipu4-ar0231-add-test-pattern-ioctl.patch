 	},
 };
 
+static struct crl_dynamic_register_access ar0231at_test_pattern_regs[] = {
+	{
+		.address = 0x3070,
+		.len = CRL_REG_LEN_16BIT,
+		.ops_items = 0,
+		.ops = 0,
+		.mask = 0xffff,
+	},
+};
