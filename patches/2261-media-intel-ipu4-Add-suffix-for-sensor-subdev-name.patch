-			 i2c_adapter_id(client->adapter), client->addr);
+		if (platform_data->suffix)
+			snprintf(sd->sd.name,
+				 sizeof(sd->sd.name), "%s %c",
+				 sensor->sensor_ds->subdevs[i].name,
+				 platform_data->suffix);
+		else
