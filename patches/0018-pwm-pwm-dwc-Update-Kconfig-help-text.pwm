From d9f691f154c2bca646d6717d55fd6bb24a85e115 Mon Sep 17 00:00:00 2001
From: Jarkko Nikula <jarkko.nikula@linux.intel.com>
Date: Wed, 8 Apr 2020 15:37:17 +0300
Subject: [PATCH 18/52] pwm: pwm-dwc: Update Kconfig help text

Add a text explaining the module name when driver is compiled as a
module.

Signed-off-by: Jarkko Nikula <jarkko.nikula@linux.intel.com>
---
 drivers/pwm/Kconfig | 3 +++
 1 file changed, 3 insertions(+)

diff --git a/drivers/pwm/Kconfig b/drivers/pwm/Kconfig
index 3eeff8fb8680..76c06a30d766 100644
--- a/drivers/pwm/Kconfig
+++ b/drivers/pwm/Kconfig
@@ -166,6 +166,9 @@ config PWM_DWC
 	help
 	  PWM driver for Synopsys DWC PWM Controller attached to a PCI bus.
 
+	  To compile this driver as a module, choose M here: the module
+	  will be called pwm-dwc.
+
 config PWM_EP93XX
 	tristate "Cirrus Logic EP93xx PWM support"
 	depends on ARCH_EP93XX || COMPILE_TEST
-- 
