 void
+#if (LINUX_VERSION_CODE >= KERNEL_VERSION(4, 15, 0))
+wl_cfgp2p_listen_expired(struct timer_list *t)
+#else
 wl_cfgp2p_listen_expired(unsigned long data)
+#endif
 {
 	wl_event_msg_t msg;
+#if (LINUX_VERSION_CODE >= KERNEL_VERSION(4, 15, 0))
+	struct p2p_info *ip2p = from_timer(ip2p, t, listen_timer);;
