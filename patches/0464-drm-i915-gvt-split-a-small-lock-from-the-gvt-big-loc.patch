 	if (scheduler->current_vgpu == NULL) {
 		mutex_unlock(&gvt->lock);
+		mutex_unlock(&vgpu->gvt->sched_lock);
 		intel_gvt_wait_vgpu_idle(vgpu);
+		mutex_lock(&vgpu->gvt->sched_lock);
 		mutex_lock(&gvt->lock);
 	}
 
