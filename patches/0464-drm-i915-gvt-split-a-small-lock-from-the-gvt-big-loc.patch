 {
 	struct intel_gvt *gvt = vgpu->gvt;
 
+	mutex_lock(&vgpu->gvt->sched_lock);
 	mutex_lock(&gvt->lock);
 
 	vgpu->active = false;
@@ -230,13 +231,16 @@ void intel_gvt_deactivate_vgpu(struct intel_vgpu *vgpu)
 
 	if (atomic_read(&vgpu->running_workload_num)) {
