-	snd_sof_dsp_update_bits_unlocked(sdev, BDW_PCI_BAR, PCI_VDRTCTL2,
-					 PCI_VDRTCL2_DCLCGE |
-					 PCI_VDRTCL2_DTCGE,
-					 PCI_VDRTCL2_DCLCGE |
-					 PCI_VDRTCL2_DTCGE);
-
-	usleep_range(50, 55);
