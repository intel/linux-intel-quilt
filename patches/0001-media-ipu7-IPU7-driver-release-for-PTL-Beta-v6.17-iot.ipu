+#define MIPI_CSI2_TYPE_RGB565		0x22
+#define MIPI_CSI2_TYPE_RGB888		0x24
+#define MIPI_CSI2_TYPE_RAW8		0x2a
+#define MIPI_CSI2_TYPE_RAW10		0x2b
