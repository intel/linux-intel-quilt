+static const struct file_operations ipu7_psys_fops = {
+	.open = ipu7_psys_open,
+	.release = ipu7_psys_release,
+	.unlocked_ioctl = ipu7_psys_ioctl,
+	.poll = ipu7_psys_poll,
+	.owner = THIS_MODULE,
+};
