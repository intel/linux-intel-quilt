+{
+	struct ipu7_isys_tpg *tpg = ipu7_isys_subdev_to_tpg(stream->asd);
+	u32 frame_sequence = atomic_read(&stream->sequence);
+
+	dev_dbg(&stream->isys->adev->auxdev.dev,
+		"eof_event::tpg-%i sequence: %i\n",
+		tpg->index, frame_sequence);
