+	return regmap_update_bits(map, MAX9296_DPLL_RESET(csi_id),
+		MAX9296_DPLL_RESET_SOFT_RST_FIELD,
+		MAX9X_FIELD_PREP(MAX9296_DPLL_RESET_SOFT_RST_FIELD, enable ? 1U : 0U));
