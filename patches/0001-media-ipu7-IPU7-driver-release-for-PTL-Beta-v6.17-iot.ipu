+	return regmap_update_bits(map, MAX9296_MIPI_PHY_LANE_MAP(csi_id),
+		MAX9296_MIPI_PHY_LANE_MAP_FIELD(csi_id, 0)
+		| MAX9296_MIPI_PHY_LANE_MAP_FIELD(csi_id, 1),
+		phy_lane_map);
