+static int regmap_read_retry(struct regmap *map, unsigned int reg,
+			   unsigned int *val)
+{
+	int ret = 0;
+	int i = 0;
+
+	for (i = 0; i < 50; i++) {
+		ret = regmap_read(map, reg, val);
+		if (!ret)
+			break;
+		msleep(20);
+	}
+
+	return ret;
+}
