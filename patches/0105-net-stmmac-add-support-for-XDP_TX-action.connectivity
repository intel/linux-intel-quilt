+	xdp_q->tx_skbuff_dma[entry].buf = dma;
+	xdp_q->tx_skbuff_dma[entry].len = size;
+	xdp_q->tx_skbuff_dma[entry].map_as_page = false;
+	xdp_q->tx_skbuff_dma[entry].last_segment = 1;
+	xdp_q->tx_skbuff_dma[entry].is_jumbo = 0;
