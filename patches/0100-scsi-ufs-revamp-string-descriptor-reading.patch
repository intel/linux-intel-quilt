 {
@@ -3022,7 +3012,7 @@ static int ufshcd_read_desc_param(struct ufs_hba *hba,
 				  enum desc_idn desc_id,
 				  int desc_index,
 				  u8 param_offset,
-				  u8 *param_read_buf,
+				  void *param_read_buf,
 				  u8 param_size)
 {
 	int ret;
@@ -3090,7 +3080,7 @@ static int ufshcd_read_desc_param(struct ufs_hba *hba,
