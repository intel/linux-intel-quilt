@@ -6359,13 +6386,15 @@ static int ufshcd_probe_hba(struct ufs_hba *hba)
 	ufshcd_init_desc_sizes(hba);
 
 	ret = ufs_get_device_desc(hba, &card);
-	if (ret) {
