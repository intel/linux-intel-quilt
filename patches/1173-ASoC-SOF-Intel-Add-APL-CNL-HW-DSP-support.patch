+static const struct sof_intel_dsp_desc *get_chip_info(int pci_id)
+{
+	int i;
+
+	for (i = 0; i < ARRAY_SIZE(chip_info); i++) {
+		if (chip_info[i].id == pci_id)
+			return &chip_info[i];
+	}
+
+	return NULL;
+}
