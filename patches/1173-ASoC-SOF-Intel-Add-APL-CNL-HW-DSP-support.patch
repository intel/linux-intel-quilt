+void hda_dsp_mailbox_write(struct snd_sof_dev *sdev, u32 offset,
+			   void *message, size_t bytes)
+{
+	void __iomem *dest = sdev->bar[sdev->mailbox_bar] + offset;
+
+	memcpy_toio(dest, message, bytes);
