+
+void hda_dsp_mailbox_read(struct snd_sof_dev *sdev, u32 offset,
+			  void *message, size_t bytes)
+{
+	void __iomem *src = sdev->bar[sdev->mailbox_bar] + offset;
+
+	memcpy_fromio(message, src, bytes);
+}
